<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_app_tickets_category_view_list" model="ir.ui.view">
        <field name="name">helpdesk_app.tickets.category.view.list</field>
        <field name="model">helpdesk_app.tickets.category</field>
        <field name="arch" type="xml">
            <list string="Tickets Category">
                <field name="name" />
                <field name="description" />
            </list>
        </field>
    </record>

    <record id="helpdesk_app_tickets_category_view_form" model="ir.ui.view">
        <field name="name">helpdesk_app.tickets.category.view.form</field>
        <field name="model">helpdesk_app.tickets.category</field>
        <field name="arch" type="xml">
            <form string="Tickets Category">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_app_tickets_category_action" model="ir.actions.act_window">
        <field name="name">Tickets Category</field>
        <field name="res_model">helpdesk_app.tickets.category</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>